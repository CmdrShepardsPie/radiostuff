{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "importHelpers": true,
    "pretty": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": [
      "esnext"
    ],
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "exclude": [
    "dist"
  ]
}
