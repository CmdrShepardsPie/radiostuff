{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "exclude": [
    "dist"
  ]
}
